{
    "name": "reveal/reveal",
    "license": "proprietary",
    "description": "Reveal Static bugs in Configs Files and Templates",
    "require": {
        "php": ">=8.1",
        "nette/bootstrap": "^3.1",
        "nette/di": "^3.0",
        "nette/utils": "^3.2",
        "phpstan/phpstan": "^1.4",
        "symplify/astral": "^10.0",
        "symplify/package-builder": "^10.0",
        "symplify/rule-doc-generator-contracts": "^10.0",
        "symplify/smart-file-system": "^10.0",
        "twig/twig": "^3.3",
        "webmozart/assert": "^1.10"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-webmozart-assert": "^1.0",
        "phpunit/phpunit": "^7.5|^9.5",
        "rector/rector": "^0.12.17",
        "symfony/framework-bundle": "^6.0",
        "symplify/easy-ci": "^10.0",
        "symplify/easy-coding-standard": "^10.1",
        "symplify/easy-testing": "^10.0",
        "symplify/monorepo-builder": "^10.1",
        "symplify/phpstan-extensions": "^10.0",
        "symplify/phpstan-rules": "^10.0",
        "tracy/tracy": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "Reveal\\PHPStanRules\\": "packages/phpstan-rules/src",
            "Reveal\\RevealNeon\\": "packages/reveal-neon/src",
            "Reveal\\RevealTwig\\": "packages/reveal-twig/src",
            "Reveal\\SymfonyPHPStanRules\\": "packages/symfony-phpstan-rules/src",
            "Reveal\\TemplatePHPStanCompiler\\": "packages/template-phpstan-compiler/src",
            "Reveal\\TwigPHPStanCompiler\\": "packages/twig-phpstan-compiler/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Reveal\\PHPStanRules\\Tests\\": "packages/phpstan-rules/tests",
            "Reveal\\RevealNeon\\Tests\\": "packages/reveal-neon/tests",
            "Reveal\\RevealTwig\\Tests\\": "packages/reveal-twig/tests",
            "Reveal\\SymfonyPHPStanRules\\Tests\\": "packages/symfony-phpstan-rules/tests",
            "Reveal\\TemplatePHPStanCompiler\\Tests\\": "packages/template-phpstan-compiler/tests",
            "Reveal\\TwigPHPStanCompiler\\Tests\\": "packages/twig-phpstan-compiler/tests"
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --ansi --fix",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=-1 --error-format symplify --ansi",
        "rector": "vendor/bin/rector process --dry-run --ansi",
        "merge": "vendor/bin/monorepo-builder merge --ansi",
        "propagate": "vendor/bin/monorepo-builder propagate --ansi",
        "validate-monorepo": "vendor/bin/monorepo-builder validate --ansi",
        "release": "vendor/bin/monorepo-builder release patch --ansi"
    },
    "replace": {
        "reveal/latte-phpstan-compiler": "self.version",
        "reveal/phpstan-rules": "self.version",
        "reveal/reveal-neon": "self.version",
        "reveal/reveal-twig": "self.version",
        "reveal/symfony-phpstan-rules": "self.version",
        "reveal/template-phpstan-compiler": "self.version",
        "reveal/twig-phpstan-compiler": "self.version"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
