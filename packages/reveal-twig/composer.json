{
    "name": "reveal/reveal-twig",
    "type": "phpstan-extension",
    "description": "Rules for static analysis of TWIG templates and TWIG render() methods",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "twig/twig": "^3.4",
        "symplify/astral": "^11.0",
        "symplify/rule-doc-generator-contracts": "^11.0",
        "symplify/package-builder": "^11.0",
        "symplify/smart-file-system": "^11.0",
        "reveal/twig-phpstan-compiler": "^0.2",
        "reveal/template-phpstan-compiler": "^0.2",
        "phpstan/phpstan": "^1.8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symplify/phpstan-extensions": "^11.0",
        "symplify/easy-ci": "^11.0",
        "symfony/framework-bundle": "^6.1"
    },
    "autoload": {
        "psr-4": {
            "Reveal\\RevealTwig\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Reveal\\RevealTwig\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.2-dev"
        },
        "phpstan": {
            "includes": [
                "config/rules.neon",
                "config/services.neon"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
