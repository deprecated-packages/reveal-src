{
    "name": "reveal/twig-phpstan-compiler",
    "type": "phpstan-extension",
    "description": "Compile twig template to PHPStan-compatible PHP code to allow its static analysis",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "nette/utils": "^3.2",
        "twig/twig": "^3.3",
        "phpstan/phpstan": "^1.8",
        "symplify/package-builder": "^10.2",
        "symplify/smart-file-system": "^10.2",
        "reveal/template-phpstan-compiler": "^0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5|^9.5",
        "symplify/easy-testing": "^10.2",
        "symplify/phpstan-rules": "^10.2",
        "symplify/phpstan-extensions": "^10.2"
    },
    "autoload": {
        "psr-4": {
            "Reveal\\TwigPHPStanCompiler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Reveal\\TwigPHPStanCompiler\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.2-dev"
        },
        "phpstan": {
            "includes": [
                "config/services.neon"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
